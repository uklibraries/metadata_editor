%tr
  %td= truncate(record.title, length: 30) unless record.title.nil?
  %td= render record.format unless record.format.nil?
  %td= link_to 'Show', record
  %td
    - if can? :edit, record
      = link_to 'Edit', edit_record_path(record)
  %td
    - if can? :destroy, record
      = link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' }
