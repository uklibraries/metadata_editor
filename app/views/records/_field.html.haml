%p
  - if defined? field_label
    %b #{field_label}:
  - else
    %b #{field.to_s.humanize}:
  - if @record.send(field).is_a? Enumerable
    %ul
      = render partial: 'fields',
               collection: @record.send(field),
               as: 'item'
  - else
    = render @record.send(field) rescue @record.try(field)
