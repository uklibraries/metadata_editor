<h1>Listing records</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Format</th>
    <th>Type</th> 
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.title unless record.title.nil? %></td>
    <td><%= render record.format unless record.format.nil? %></td>
    <td><%= render record.type unless record.type.nil? %></td>
    <td><%= record.date unless record.date.nil? %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

