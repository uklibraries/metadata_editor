<h1>Listing records</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Format</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= truncate(record.title, length: 30) unless record.title.nil? %></td>
    <td><%= render record.format unless record.format.nil? %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

